/*
Mini calculadora
este exemplo demonstra o uso do desvio condicional para criar uma mini calculadora.
O programa pede ao usuário que inforne dois numeros reais e a operação a ser executada entre estes números (soma, divisão, etc)
Por fim, é exibido o valor resultante da operação entre os dois numeros.
*/

programa 
{
  funcao inicio() 
  {
     caracter operador

     real resultado = 0.0, operando1, operando2  

     escreva ("Digite o primeiro número: ")
     leia(operando1)

     escreva ("Digite o segundo número: ")
     leia(operando2)

     escreva("\n")

     escreva( "Agora digite uma das operações (+ - * /) : ")
     leia(operador)

     /* verifica qual foi a operação selecionada*/

     se(operador == '+'){
        resultado = operando1 + operando2

     }senao se (operador == '-'){
        resultado = operando1 - operando2

      }senao se (operador == '/'){
        resultado = operando1 / operando2  

      }senao se (operador == '*'){
        resultado = operando1 * operando2
     }

     limpa()

     escreva ("Resultado:\n\n")
     escreva(operando1, " ", operador, " ", operando2, " = ", resultado)

    escreva ("\n")
  }
}
